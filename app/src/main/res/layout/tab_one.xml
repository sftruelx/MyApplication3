<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.larry.myapplication.MainActivity">
<LinearLayout
    android:id="@+id/tab1_line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentTop="true"
    android:background="@color/lightgrey"/>
    <TextView
        android:id="@+id/tab1_title"
        android:layout_below="@+id/tab1_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=" WELCOME !     2015 12 23"
        android:textSize="33dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/tab1_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab1_title"
        android:layout_margin="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.example.larry.myapplication.banner.SimpleImageBanner
            android:id="@+id/sib_simple_usage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            banner:bb_scale="0.5625" />

        <TextView
            android:id="@+id/tab1_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sib_simple_usage"
            android:text="强力推荐"
            android:textSize="25dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
